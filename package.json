{
  "name": "mdc-electron",
  "description": "A visual tool for developing morph modules.",
  "version": "4.0.0",
  "author": "Sam Maister <sam.maister@bbc.co.uk>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goosewobbler/mdc-electron.git"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./lib && rm ./public/bundle.js{,.map}",
    "build": "npm run buildClient && npm run buildServer",
    "buildClient": "NODE_ENV=production webpack -p",
    "buildDevClient": "webpack -p",
    "buildServer": "tsc -p tsconfig-source-only.json --outDir lib --rootDir src",
    "devClient": "npm run buildDevClient && npm run -s runClient",
    "devServer": "concurrently \"npm run -s watchServer\" \"npm run -s runServer\"",
    "dev": "concurrently \"npm run buildServer\" \"npm run buildDevClient && npm run runServer\"",
    "watch": "tsc -w",
    "lint": "eslint --ext .ts --ext .tsx ./src",
    "prettier": "prettier --write '{src/**/*,test/**/*,*}.{ts,tsx,js,json}'",
    "runClient": "webpack-dev-server --watch-content-base --content-base public",
    "runServer": "electron ./lib/main.js -D",
    "watchServer": "tsc -w -p tsconfig-source-only.json --outDir lib --rootDir src",
    "start": "electron ./lib/main.js",
    "jest": "jest --watch"
  },
  "dependencies": {
    "app-root-path": "^2.2.1",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "chas": "^1.0.1",
    "classnames": "^2.2.6",
    "cors": "^2.8.5",
    "electron": "^5.0.8",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "graceful-fs": "^4.2.2",
    "lodash": "^4.17.15",
    "ls": "^0.2.1",
    "morph-cli": "^11.6.1",
    "ncp": "^2.0.0",
    "node-object-hash": "^1.4.2",
    "node-watch": "^0.6.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-graph-vis": "^1.0.2",
    "react-hot-loader": "^4.12.9",
    "react-list": "^0.8.11",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.0",
    "reselect": "^4.0.0",
    "semver": "^6.3.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "strip-ansi": "^5.2.0",
    "tailwindcss": "^1.1.1",
    "tar": "^4.4.10",
    "why-did-you-update": "^1.0.6"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/classnames": "^2.2.9",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^8.0.0",
    "@types/graceful-fs": "^4.1.3",
    "@types/lodash": "^4.14.136",
    "@types/ncp": "^2.0.1",
    "@types/react-dom": "^16.8.5",
    "@types/react-list": "^0.8.5",
    "@types/react-redux": "^7.1.1",
    "@types/request": "^2.48.2",
    "@types/semver": "^6.0.1",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/tar": "^4.0.3",
    "@types/why-did-you-update": "0.0.10",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.1.2",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.14.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  }
}
