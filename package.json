{
  "name": "mdc-electron",
  "description": "A visual tool for developing morph modules.",
  "version": "1.0.0",
  "author": "Sam Maister <sam.maister@bbc.co.uk>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/mdc-electron.git"
  },
  "main": "index.js",
  "scripts": {
    "init": "sh ./scripts/setup.sh && pnpm install",
    "clean": "rm -rf ./dist",
    "clean:all": "rm -rf pnpm-lock.yaml ./node_modules ./dist",
    "dev": "pnpm clean && pnpm dev:build-main && cross-env START_HOT=1 node -r @babel/register ./scripts/check-port.js && cross-env START_HOT=1 pnpm dev:start-renderer",
    "dev:upgrade-extensions": "UPGRADE_EXTENSIONS=true pnpm dev",
    "dist": "pnpm build && electron-builder",
    "build": "pnpm clean && concurrently 'pnpm build:main' 'pnpm build:renderer'",
    "build:main": "cross-env NODE_ENV=production webpack --config ./webpack/main.config.js --colors",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/renderer.config.js --colors",
    "start": "cross-env NODE_ENV=production electron ./dist/main.prod.js",
    "dev:build-main": "cross-env NODE_ENV=development webpack --config ./webpack/main.config.js --colors",
    "dev:start-main": "cross-env START_HOT=1 NODE_ENV=development electron -r @babel/register ./dist/main.dev.js",
    "dev:start-renderer": "cross-env NODE_ENV=development webpack-dev-server --config ./webpack/renderer.config.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "concurrently 'pnpm lint:code' 'pnpm lint:styles'",
    "lint:code": "eslint '**/*.[j|t]s{,x}'",
    "lint:code:fix": "pnpm lint:code --fix",
    "lint:styles": "stylelint --ignore-path .eslintignore '**/*.pcss'",
    "lint:styles:fix": "pnpm --silent lint-styles --fix; exit 0",
    "test": "pnpm test:setup && pnpm test:coverage && pnpm format && pnpm lint",
    "test:setup": "mkdir -p ./dist && cp ./src/local-push.js ./dist/local-push.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watch-coverage": "jest --watch --coverage",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@hot-loader/react-dom": "^16.13.0+4.12.20",
